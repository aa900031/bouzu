{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@bouzu/shared": ["../../packages/shared/src"],
			"@bouzu/scroller": ["../../packages/scroller/state/src"],
			"@bouzu/virtualizer": ["../../packages/virtualizer/state/src"],
			"@bouzu/zoomable": ["../../packages/zoomable/state/src"]
		}
	}
}
