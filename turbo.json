{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**"
			],
			"inputs": [
				".storybook/**",
				"src/**",
				"tsdown.config.ts",
				"tsconfig.json",
				"tsconfig.*.json",
				"vite.config.ts",
				"unocss.config.ts"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"preview": {
			"outputs": []
		},
		"release": {
			"dependsOn": ["^release"],
			"cache": false
		},
		"@bouzu/storybook-vue#build": {
			"dependsOn": [
				"@bouzu/storybook#build",
				"^build"
			],
			"outputs": [
				"../root/dist/vue/**"
			]
		}
	}
}
